<resources xmlns:tools="http://schemas.android.com/tools">

    <attr name="color_text_header" />
    <attr name="color_text_description" />
    <!-- Base application theme. -->
    <style name="Theme.Sprint9" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="color_text_header">#f3c</item>
        <item name="color_text_description">#3cf</item>
    </style>

    <style name="Theme.Sprint9.Alternate">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">#f0f</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="color_text_header">#3fc</item>
<!--        <item name="color_text_description">#ff0</item>-->
    </style>


    <style name="Widget.Sprint9.Header" parent="">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/color_text_header</item>
    </style>

    <style name="Widget.Sprint9.Header.Alt">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="Widget.Sprint9.Description" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/color_text_description</item>
    </style>

</resources>